<html>
<head>
  <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
  <script type="text/javascript">
      google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawTemp);
      google.charts.setOnLoadCallback(drawPrecip);
           google.charts.setOnLoadCallback(drawWind);
                google.charts.setOnLoadCallback(drawVisibility);
      function drawTemp() {
          // Some raw data (not necessarily accurate)
          var data = google.visualization.arrayToDataTable([
              ['Temperature',  'Maximum Rides',  'Minimum Rides',    'Average Rides'],
              <% @temp_data.each do |row|%>
              <%= row %>,
              <%end%>
          ]);
          var options = {
              title : 'Ride Stats Based on Temperature',
              vAxis: {title: 'Number of Rides'},
              hAxis: {title: 'Temperature'},
              seriesType: 'bars',
          };
          var chart = new google.visualization.ComboChart(document.getElementById('temp_div'));
          chart.draw(data, options);
      };
      function drawPrecip() {
          // Some raw data (not necessarily accurate)
          var data = google.visualization.arrayToDataTable([
