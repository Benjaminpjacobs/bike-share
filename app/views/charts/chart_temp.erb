          var chart = new google.visualization.ComboChart(document.getElementById('visib_div'));
          chart.draw(data, options);
      };
  </script>
</head>
<body>
<div id="temp_div" style="width: 300px; height: 250px; display:inline-block;"></div>
<div id="precip_div" style="width: 300px; height: 250px;display:inline-block;"></div>
<div id="wind_div" style="width: 300px; height: 250px;display:inline-block;"></div>
<div id="visib_div" style="width: 300px; height: 250px;display:inline-block;"></div>
</body>
</html>