              <%= row %>,
              <%end%>
          ]);
          var options = {
              title : 'Ride Stats Based on Precipitation',
              vAxis: {title: 'Number of Rides'},
              hAxis: {title: 'Precipitation'},
              seriesType: 'bars',
          };
          var chart = new google.visualization.ComboChart(document.getElementById('precip_div'));
          chart.draw(data, options);
      };
            function drawWind() {
          // Some raw data (not necessarily accurate)
          var data = google.visualization.arrayToDataTable([
              ['Temperature',  'Maximum Rides',  'Minimum Rides',    'Average Rides'],
              <% @wind_data.each do |row|%>
