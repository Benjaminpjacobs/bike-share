          var options = {
              title : 'Ride Stats Based on Wind Speed',
              vAxis: {title: 'Number of Rides'},
              hAxis: {title: 'Wind Speed'},
              seriesType: 'bars',
          };
          var chart = new google.visualization.ComboChart(document.getElementById('wind_div'));
          chart.draw(data, options);
      };
            function drawVisibility() {
          // Some raw data (not necessarily accurate)
          var data = google.visualization.arrayToDataTable([
              ['Temperature',  'Maximum Rides',  'Minimum Rides',    'Average Rides'],
              <% @visib_data.each do |row|%>
