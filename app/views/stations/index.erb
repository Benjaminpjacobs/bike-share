<h1>All Stations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Dock Count</th>
    <th>Installation Date</th>
    <th>City</th>
  </tr>
  <% @stations.each do |station| %>
    <tr class="station">
      <td><%= station.name %></td>
      <td><%= station.dock_count %></td>
      <td><%= station.date_ref.name %></td>
      <td><%= station.city.name %></td>
    </tr>
  <% end %>
</table>
